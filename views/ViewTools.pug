extends ./common/adminLayout
block content
    div(class="container" )
        div(class="row justify-content-center h-100 col mb-3")
            div(class="col-sm-10 aling-self-center")
                div(class="card" id="data")
                    div(class="card-body text-center")
                        h2 Inventario de la ferreteria
                        table(class="table table-dark")
                            thead
                                tr
                                    th(scope="col") Codigo de barras
                                    th(scope="col") Marca
                                    th(scope="col") Descripcion
                                    th(scope="col") Unidades disponibles 
                                    th(scope="col") Precio unitario
                            tbody
                                each item in tools
                                    tr
                                        th(scope="row")=item.BarCode
                                        td=item.Brand
                                        td=item.Description
                                        td=item.Quantity
                                        td=item.Price
                                    
